## script.rpy
## 游戏入口和主脚本 / Main Script Entry Point

################################################################################
## 闪屏 - 确保主菜单显示
################################################################################

label splashscreen:
    ## 这个 label 在游戏启动时运行，确保主菜单正常显示
    ## return 后 Ren'Py 会自动显示 main_menu 屏幕
    return

################################################################################
## 游戏开始
################################################################################

label start:
    ## 初始化变量
    $ madness = 0
    $ choice_flags = {}

    ## 跳转到序章
    jump prologue
